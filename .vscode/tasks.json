{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend (Vite)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start Backend (FastAPI)",
      "type": "shell",
      "command": "uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
